@model C_Hero.Models.Entities.OrgaModel

@{
    ViewData["Title"] = "Créer une Organisation";
}

<h2>Créer une Organisation</h2>

<form asp-action="CreateOrga" method="post">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Social_Siege" class="control-label"></label>
        <input asp-for="Social_Siege" class="form-control" />
        <span asp-validation-for="Social_Siege" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Phone" class="control-label"></label>
        <input asp-for="Phone" class="form-control" />
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email" class="control-label"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Comment" class="control-label"></label>
        <textarea asp-for="Comment" class="form-control"></textarea>
        <span asp-validation-for="Comment" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Picture" class="control-label"></label>
        <input asp-for="Picture" class="form-control" />
        <span asp-validation-for="Picture" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Nb_Incident_Declared" class="control-label"></label>
        <input asp-for="Nb_Incident_Declared" class="form-control" />
        <span asp-validation-for="Nb_Incident_Declared" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Members" class="control-label"></label>
        <select asp-for="Members" class="form-control" asp-items="@(new SelectList(ViewBag.Civils, "PK_Civil", "FirstName"))" multiple>
            <option value="">Sélectionnez des membres</option>
        </select>
        <span asp-validation-for="Members" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Dirigeant" class="control-label"></label>
        <select asp-for="Dirigeant" class="form-control" asp-items="@(new SelectList(ViewBag.Civils, "PK_Civil", "FirstName"))" multiple>
            <option value="">Sélectionnez des dirigeants</option>
        </select>
        <span asp-validation-for="Dirigeant" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Heroes" class="control-label"></label>
        <select asp-for="Heroes" class="form-control" asp-items="@(new SelectList(ViewBag.SuperHeroes, "PK_SuperH", "Name"))" multiple>
            <option value="">Sélectionnez des super-héros</option>
        </select>
        <span asp-validation-for="Heroes" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Villains" class="control-label"></label>
        <select asp-for="Villains" class="form-control" asp-items="@(new SelectList(ViewBag.SuperVillains, "PK_SuperV", "Name"))" multiple>
            <option value="">Sélectionnez des super-vilains</option>
        </select>
        <span asp-validation-for="Villains" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Créer" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
