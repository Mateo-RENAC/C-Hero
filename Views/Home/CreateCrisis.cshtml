@model C_Hero.Models.Entities.CrisisModel

@{
    ViewBag.Title = "Create Crisis";
}

<h2>Create Crisis</h2>

<form asp-action="CreateCrisis" method="post">
    <div class="form-group">
        <label asp-for="Type" class="control-label"></label>
        <input asp-for="Type" class="form-control" />
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Comment" class="control-label"></label>
        <input asp-for="Comment" class="form-control" />
        <span asp-validation-for="Comment" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="FK_Dispute" class="control-label"></label>
        <select asp-for="FK_Dispute" class="form-control" asp-items="@(new SelectList(ViewBag.Disputes, "PK_Dispute", "Type"))">
            <option value="">Select Dispute</option>
        </select>
        <span asp-validation-for="FK_Dispute" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Rapports" class="control-label"></label>
        <select asp-for="Rapports" class="form-control" asp-items="@(new SelectList(ViewBag.Rapports, "FK_Rapport", "Comment"))" multiple>
            <option value="">Select Rapports</option>
        </select>
        <span asp-validation-for="Rapports" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
