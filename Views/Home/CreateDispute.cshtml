@model C_Hero.Models.Entities.DisputeModel

@{
    ViewData["Title"] = "Créer une Dispute";
}

<h2>Créer une Dispute</h2>

<form asp-action="CreateDispute" method="post">
    <div class="form-group">
        <label asp-for="Type" class="control-label"></label>
        <input asp-for="Type" class="form-control" />
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Comment" class="control-label"></label>
        <textarea asp-for="Comment" class="form-control"></textarea>
        <span asp-validation-for="Comment" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Cost" class="control-label"></label>
        <input asp-for="Cost" class="form-control" />
        <span asp-validation-for="Cost" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Photos" class="control-label"></label>
        <input asp-for="Photos" class="form-control" />
        <span asp-validation-for="Photos" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="OrgaId" class="control-label"></label>
        <select asp-for="OrgaId" class="form-control" asp-items="@(new SelectList(ViewBag.Organisations, "PK_Orga", "Name"))">
            <option value="">Sélectionnez une organisation</option>
        </select>
        <span asp-validation-for="OrgaId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CivilId" class="control-label"></label>
        <select asp-for="CivilId" class="form-control" asp-items="@(new SelectList(ViewBag.Civils, "PK_Civil", "Name"))">
            <option value="">Sélectionnez un civil</option>
        </select>
        <span asp-validation-for="CivilId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Créer" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
