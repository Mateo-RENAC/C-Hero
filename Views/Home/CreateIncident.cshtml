@model C_Hero.Models.Entities.IncidentModel

@{
    ViewData["Title"] = "Créer un Incident";
}

<h2>Créer un Incident</h2>

<form asp-action="CreateIncident" method="post">
    <div class="form-group">
        <label asp-for="Localization" class="control-label"></label>
        <input asp-for="Localization" class="form-control" />
        <span asp-validation-for="Localization" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Comment" class="control-label"></label>
        <textarea asp-for="Comment" class="form-control"></textarea>
        <span asp-validation-for="Comment" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Orga_DecleareId" class="control-label"></label>
        <select asp-for="Orga_DecleareId" class="form-control" asp-items="@(new SelectList(ViewBag.Organisations, "PK_Orga", "Name"))">
            <option value="">Sélectionnez une organisation</option>
        </select>
        <span asp-validation-for="Orga_DecleareId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Civil_DecleareId" class="control-label"></label>
        <select asp-for="Civil_DecleareId" class="form-control" asp-items="@(new SelectList(ViewBag.Civils, "PK_Civil", "Name"))">
            <option value="">Sélectionnez un civil</option>
        </select>
        <span asp-validation-for="Civil_DecleareId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Villains" class="control-label"></label>
        <select asp-for="Villains" class="form-control" asp-items="@(new SelectList(ViewBag.SuperVillains, "PK_SuperV", "Name"))" multiple>
            <option value="">Sélectionnez des vilains</option>
        </select>
        <span asp-validation-for="Villains" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Créer" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

