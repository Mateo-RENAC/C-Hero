@model C_Hero.Models.Entities.SuperVillainModel

@{
    ViewData["Title"] = "Créer un SuperVillain";
}

<h2>Créer un SuperVillain</h2>

<form asp-action="CreateSuperVillain" method="post">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Power" class="control-label"></label>
        <input asp-for="Power" class="form-control" />
        <span asp-validation-for="Power" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Weakness" class="control-label"></label>
        <input asp-for="Weakness" class="form-control" />
        <span asp-validation-for="Weakness" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Picture" class="control-label"></label>
        <input asp-for="Picture" class="form-control" />
        <span asp-validation-for="Picture" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Comment" class="control-label"></label>
        <textarea asp-for="Comment" class="form-control"></textarea>
        <span asp-validation-for="Comment" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Orgas" class="control-label"></label>
        <select asp-for="Orgas" class="form-control" asp-items="@(new SelectList(ViewBag.Orgas, "PK_Orga", "Name"))" multiple>
            <option value="">Sélectionnez des organisations</option>
        </select>
        <span asp-validation-for="Orgas" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IdentityId" class="control-label"></label>
        <select asp-for="IdentityId" class="form-control" asp-items="@(new SelectList(ViewBag.Civils, "PK_Civil", "FullName"))">
            <option value="">Sélectionnez une identité civile</option>
        </select>
        <span asp-validation-for="IdentityId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Créer" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
